<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Contenedor Principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_margin="8dp">

        <!-- Contenedor de Informaci贸n -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Nombre del Plato -->
            <TextView
                android:id="@+id/tvPlatoNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nombre_del_plato_item"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="6dp" />

            <!-- Descripci贸n del Plato -->
            <TextView
                android:id="@+id/tvPlatoDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/descripci_n_del_plato"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:paddingBottom="8dp" />

            <!-- Precio -->
            <TextView
                android:id="@+id/tvPlatoPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/precio"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <!-- Contenedor de Modificadores y Bot贸n -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <!-- Selector de Cantidad -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnRestar"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:textSize="16sp"
                    android:backgroundTint="@android:color/holo_red_light"/>

                <TextView
                    android:id="@+id/tvCantidad"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="8dp" />

                <Button
                    android:id="@+id/btnSumar"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="16sp"
                    android:backgroundTint="@android:color/holo_green_light"/>
            </LinearLayout>

            <!-- Bot贸n Agregar -->
            <Button
                android:id="@+id/btnAgregar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/a_adir"
                android:textStyle="bold"
                android:textSize="14sp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!-- Imagen del Plato (Ahora como ImageButton) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imgPlatoButton"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:background="@android:color/transparent"
                android:onClick="onImageButtonClick"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
